doctype html
html(lang="en")
  head
    title= "Photo Gallery"
    link(href='../css/styles.css' rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Squada+One' rel='stylesheet')
  body
    #container
      #topo
        img#logo(src='../img/logo.png' alt='Logo')
        #menu_icon
        ul#sprite_menu
          li#menu_home.active
            a(href='#') Home
          li#menu_about
            a(href='#') About
          li#menu_services
            a(href='#') Services
          li#menu_contact
            a(href='#') Contact
      h1 Photo Gallery
      p.
        This Photo Gallery is a collection of Beautiful nature pictures
        including many species of animals
      #gallery
      ul#pagination
      #footer.
        &copy; 2014 Nature's Beauty Creations Ltd.<br>
        Address: P.O. Box 1, Millewa, Horana. Sri Lanka.<br>
        All rights reserved
    #modal_div
      h2#modal_title Picture
      ul
        li#modal_previous(title='Use Navigation Keys') &laquo;
        li#modal_next(title='Use Navigation Keys') &raquo;
        li#modal_close(title='Use Esc Key') X
      img#modal_img(src='blank.gif' alt='')
    script(src='../javascript/scripts.js')
